{
  "name": "react-native-stylesheet-cleaner",
  "displayName": "react-native-stylesheet-cleaner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "react-native",
    "stylesheet",
    "cleaner",
    "unused styles",
    "VS Code extension",
    "JavaScript",
    "TypeScript",
    "React",
    "React Native",
    "code cleanup",
    "code quality",
    "linter",
    "formatter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/theBGuy/vs-react-native-stylesheet-cleaner"
  },
  "author": "theBGuy <theBGuy.github@gmail.com>",
  "publisher": "theBGuy",
  "license": "MIT",
  "icon": "logo.png",
  "activationEvents": [
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "workspaceContains:**/*.tsx",
    "workspaceContains:**/*.jsx",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "properties": {
        "react-native-stylesheet-cleaner.autoCleanOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically clean unused styles on file save."
        }
      }
    },
    "commands": [
      {
        "command": "extension.removeAllUnusedStyles",
        "title": "Remove All Unused Styles"
      },
      {
        "command": "extension.removeSingleUnusedStyle",
        "title": "Remove Single Unused Style"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.removeAllUnusedStyles",
          "when": "editorLangId == typescriptreact || editorLangId == javascriptreact",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.removeAllUnusedStyles",
          "when": "editorLangId == typescriptreact || editorLangId == javascriptreact"
        }
      ]
    },
    "languages": [
      {
        "id": "typescriptreact",
        "extensions": [
          ".tsx"
        ],
        "aliases": [
          "TypeScript React",
          "tsx"
        ]
      },
      {
        "id": "javascriptreact",
        "extensions": [
          ".jsx"
        ],
        "aliases": [
          "JavaScript React",
          "jsx"
        ]
      }
    ],
    "codeActions": [
      {
        "language": "typescriptreact",
        "actions": [
          {
            "kind": "quickfix",
            "title": "Remove Unused Style"
          }
        ]
      },
      {
        "language": "javascriptreact",
        "actions": [
          {
            "kind": "quickfix",
            "title": "Remove Unused Style"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "release": "release-it",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^9.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "release-it": "^17.11.0",
    "typescript": "^5.7.2"
  }
}
